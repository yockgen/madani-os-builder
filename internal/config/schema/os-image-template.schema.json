{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "os-image-template.schema.json",
  "title": "OS Image Template Schemas",
  "description": "Schemas for validating user-provided templates and fully merged templates.",

  "$defs": {
    "Image": {
      "type": "object",
      "description": "Image metadata and versioning",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9\\-_]*[a-zA-Z0-9])?$"
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+(\\.([0-9]+|[0-9]*[a-zA-Z-][0-9a-zA-Z-]*)){0,2}(\\+[0-9a-zA-Z-]+(\\.[0-9a-zA-Z-]+)*)?$"
        }
      },
      "required": ["name", "version"],
      "additionalProperties": false
    },

    "Target": {
      "type": "object",
      "description": "Target platform and system configuration",
      "properties": {
        "os": {
          "type": "string",
          "enum": ["azure-linux", "edge-microvisor-toolkit", "wind-river-elxr"]
        },
        "dist": { "type": "string" },
        "arch": {
          "type": "string",
          "enum": ["x86_64", "aarch64", "armv7hl"]
        },
        "imageType": {
          "type": "string",
          "enum": ["raw", "iso", "qcow2", "vhd", "vhdx", "vmdk"]
        }
      },
      "required": ["os", "dist", "arch", "imageType"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": { "properties": { "os": { "const": "azure-linux" } } },
          "then": { "properties": { "dist": { "enum": ["azl3"] } } }
        },
        {
          "if": { "properties": { "os": { "const": "edge-microvisor-toolkit" } } },
          "then": { "properties": { "dist": { "enum": ["emt3"] } } }
        },
        {
          "if": { "properties": { "os": { "const": "wind-river-elxr" } } },
          "then": { "properties": { "dist": { "enum": ["elxr12"] } } }
        }
      ]
    },

    "Disk": {
      "type": "object",
      "description": "Disk configuration",
      "properties": {
        "name": { "type": "string" },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["raw", "qcow2", "vhd", "vhdx", "vmdk"]
              },
              "compression": {
                "type": "string",
                "enum": ["gz", "gzip", "xz", "zstd", "bz2"]
              }
            },
            "required": ["type"],
            "additionalProperties": false
          }
        },
        "size": { "type": "string" },
        "partitionTableType": {
          "type": "string",
          "enum": ["gpt", "mbr"]
        },
        "partitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "type": { "type": "string" },
              "fsType": { "type": "string" },
              "start": { "type": "string" },
              "end": { "type": "string" },
              "mountPoint": { "type": "string" },
              "mountOptions": { "type": "string" },
              "flags": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },

    "Immutability": {
      "type": "object",
      "description": "Immutability configuration with UEFI Secure Boot support",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "secureBootDBKey": {
          "type": "string",
          "allOf": [
            { "pattern": "^[A-Za-z0-9_./-]+\\.(?:key|pem)$" },
            { "not": { "pattern": "\\.\\." } }
          ]
        },
        "secureBootDBCrt": {
          "type": "string",
          "allOf": [
            { "pattern": "^[A-Za-z0-9_./-]+\\.(?:crt|pem)$" },
            { "not": { "pattern": "\\.\\." } }
          ]
        },
        "secureBootDBCer": {
          "type": "string",
          "allOf": [
            { "pattern": "^[A-Za-z0-9_./-]+\\.cer$" },
            { "not": { "pattern": "\\.\\." } }
          ]
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },

    "Users": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "password": { "type": "string" },
          "hash_algo": { "type": "string" },
          "passwordMaxAge": { "type": "integer" },
          "startupScript": { "type": "string" },
          "groups": { "type": "array", "items": { "type": "string" } },
          "sudo": { "type": "boolean" },
          "home": { "type": "string" },
          "shell": { "type": "string" }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },

    "Bootloader": {
      "type": "object",
      "properties": {
        "bootType": { "type": "string", "enum": ["efi", "legacy"] },
        "provider": {
          "type": "string",
          "enum": ["grub", "grub2", "systemd-boot"]
        }
      },
      "additionalProperties": false
    },

    "Kernel": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "cmdline": { "type": "string" },
        "uki": { "type": "boolean" }
      },
      "required": ["version"],
      "additionalProperties": false
    },

    "SystemConfig": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "immutability": { "$ref": "#/$defs/Immutability" },
        "users": { "$ref": "#/$defs/Users" },
        "bootloader": { "$ref": "#/$defs/Bootloader" },
        "packages": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9\\-_.+]*[a-zA-Z0-9])?$"
          },
          "uniqueItems": true
        },
        "additionalFiles": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true }
        },
        "kernel": { "$ref": "#/$defs/Kernel" }
      },
      "required": ["name", "packages", "kernel"],
      "additionalProperties": false
    },

    "FullTemplate": {
      "type": "object",
      "properties": {
        "image": { "$ref": "#/$defs/Image" },
        "target": { "$ref": "#/$defs/Target" },
        "disk": { "$ref": "#/$defs/Disk" },
        "systemConfig": { "$ref": "#/$defs/SystemConfig" }
      },
      "required": ["image", "target", "systemConfig"],
      "additionalProperties": false
    },

    "UserTemplate": {
      "type": "object",
      "properties": {
        "image": { "$ref": "#/$defs/Image" },
        "target": { "$ref": "#/$defs/Target" },
        "disk": { "$ref": "#/$defs/Disk" },
        "systemConfig": { "$ref": "#/$defs/SystemConfig" }
      },
      "required": ["image", "target"],
      "additionalProperties": false
    }
  }
}